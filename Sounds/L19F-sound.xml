<?xml version="1.0" encoding="ISO-8859-1"?>

<PropertyList>
  
  <fx>
    
    <!-- ENGINE -->
    <crank>
      <name>engstart1</name>
      <path>Sounds/engstart.wav</path>
      <property>engines/engine[0]/cranking</property>
      <position>
        <x> -1.8 </x>
        <y>  0.0 </y>
        <z>  0.0 </z>
      </position>
      <volume>
        <offset> 0.5 </offset>
      </volume>
    </crank>
    
    <crank>
      <name>crank1</name>
      <mode>looped</mode>
      <path>Sounds/cranking.wav</path>
      <condition>
        <property>engines/engine[0]/cranking</property>
        <not>
          <property>engines/engine[0]/running</property>
        </not>
      </condition>
      <position>
        <x> -1.8 </x>
        <y>  0.0 </y>
        <z>  0.0 </z>
      </position>
      <volume>
        <offset>0.5</offset>
      </volume>
    </crank>
    
    <crank>
      <name>cough1</name>
      <path>Sounds/coughing.wav</path>
      <property>engines/engine[0]/running</property>
      <position>
        <x> -1.8 </x>
        <y>  0.0 </y>
        <z>  0.0 </z>
      </position>
      <volume>
        <offset>0.3</offset>
      </volume>
    </crank>
    
    <engine>
      <name>engine-external-1</name>
      <mode>looped</mode>
      <path>Aircraft/Cessna-L19/Sounds/Engine_Continental-O200A.wav</path>
      <position>
        <x> -1.8 </x>
        <y>  0.0 </y>
        <z>  0.0 </z>
      </position>
      <condition>
        <property>engines/engine[0]/running</property>
        <not>
          <property>/sim/current-view/internal</property>
        </not>
      </condition>
      <volume>
        <property>engines/engine[0]/mp-osi</property>
        <factor>0.018</factor>
        <min>0.35</min>
        <max>2</max>
        <offset>0.35</offset>
      </volume>
      <pitch>
        <property>engines/engine[0]/rpm</property>
        <factor>0.0005</factor>
        <min>0.3</min>
        <max>2.0</max>
        <offset>0.3</offset>
      </pitch>
    </engine>
    
    <engine>
      <name>engine-internal-1</name>
      <mode>looped</mode>
      <path>Aircraft/Cessna-L19/Sounds/Engine_Continental-O200A-LPF.wav</path>
      <condition>
        <and>
          <property>engines/engine[0]/running</property>
          <property>/sim/current-view/internal</property>
        </and>  
      </condition>
      <position>
        <x>-1.8</x>
        <y> 0  </y>
        <z> 0  </z>
      </position>
      <volume>
        <property>engines/engine[0]/mp-osi</property>
        <factor>0.012</factor>
        <min>0.4</min>
        <max>1.5</max>
        <offset>0.4</offset>
      </volume>
      <pitch>
        <property>engines/engine[0]/rpm</property>
        <factor>0.0005</factor>
        <min>0.3</min>
        <max>2.0</max>
        <offset>0.3</offset>
      </pitch>
    </engine>
    
    <!-- FLAPS & CONTROLS -->
    <flap>
      <name>flaps</name>
      <mode>in-transit</mode>
      <path>Aircraft/Cessna-L19/Sounds/Cessna150Flaps.wav</path>
      <property>surface-positions/flaps-pos-norm</property>
      <volume>
        <factor>0.8</factor>
      </volume>
      <reference-dist>10.0</reference-dist>
      <max-dist>20.0</max-dist>
    </flap>
    
    <!-- DOOR -->
    <door>
      <name>Door Open</name>
      <path>Aircraft/Cessna-L19/Sounds/DoorOpen.wav</path>
      <condition>
        <greater-than>
          <property>sim/model/door-positions/crew/position-norm</property>
          <value>0.1</value>
        </greater-than>
      </condition>
      <volume>
        <factor>0.8</factor>
      </volume>
    </door>
    <door>
      <name>Door Close</name>
      <path>Aircraft/Cessna-L19/Sounds/DoorClosed.wav</path>
      <condition>
        <equals>
          <property>sim/model/door-positions/crew/position-norm</property>
          <value>0</value>
        </equals>
      </condition>
      <volume>
        <factor>1</factor>
      </volume>
    </door>
    
    <!-- RUMBLE -->
    <rumble>
      <name>Rumble</name>
      <mode>looped</mode>
      <path>Aircraft/Cessna-L19/Sounds/wave.wav</path>
      <condition>
        <or>
          <property>/gear/gear[0]/wow</property>
          <property>/gear/gear[1]/wow</property>
          <property>/gear/gear[2]/wow</property>
          <property>/gear/gear[3]/wow</property>
          <property>/gear/gear[4]/wow</property>
          <property>/gear/gear[5]/wow</property>
        </or>
      </condition>
      <volume>
        <property>velocities/groundspeed-kt</property>
        <type>log</type>
        <factor>0.35</factor>
      </volume>
    </rumble>
    
    <!-- CRASH & ALARMS -->
    <crash>
      <name>Intense ground contact</name>
      <mode>once</mode>
      <path>Sounds/crash.wav</path>
      <property>sim/crashed</property>
      <volume>
        <factor>1</factor>
      </volume>
      <pitch>
        <factor>0.1</factor>
      </pitch>
      <reference-dist>100</reference-dist>
      <max-dist>500</max-dist>
    </crash>
    
    <wind>
      <name>wind</name>
      <mode>looped</mode>
      <path>Sounds/wind.wav</path>
      <property>velocities/airspeed-kt</property>
      <volume>
        <property>position/altitude-ft</property>
        <factor>-0.000015</factor>
        <offset>0.4</offset>
        <min>0.1</min>
        <max>0.4</max>
      </volume>
      <volume>
        <property>velocities/airspeed-kt</property>
        <factor>0.0007</factor>
        <min>0.03</min>
        <max>0.12</max>
      </volume>
      <pitch>
        <property>velocities/airspeed-kt</property>
        <factor>0.01</factor>
        <offset>1.25</offset>
      </pitch>
    </wind>
    
  </fx>
  
</PropertyList>
