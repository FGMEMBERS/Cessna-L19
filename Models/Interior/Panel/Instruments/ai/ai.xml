<?xml version="1.0" encoding="ISO-8859-1"?> 

<PropertyList> 

  <path>ai.ac</path>

  <animation>
    <!-- Objets opaques -->
    <object-name>contour</object-name>
    <object-name>visses</object-name>
    <object-name>interrupteur</object-name>
    <object-name>intocage</object-name>
    <object-name>cadran</object-name>
    <object-name>face</object-name>
    <object-name>ai</object-name>

    <!-- Objets transparents -->
    <object-name>vitre</object-name>
  </animation>

  <!-- working for Rembrandt -->
  <effect>
    <inherits-from>Aircraft/Cessna-L19/Models/Effects/glass/glass</inherits-from>
    <object-name>vitre</object-name>
  </effect>
  
  <animation> 
    <type>material</type>
    <object-name>face</object-name>
    <object-name>cadran</object-name>
    <object-name>ai</object-name>
    <emission>
      <factor-prop>systems/electrical/outputs/instrument-lights</factor-prop>
      <red>   0.50 </red>
      <green> 0.25 </green>
      <blue>  0.25 </blue>
    </emission>
  </animation>

  <animation> 
    <type>rotate</type>
    <object-name>ai</object-name>
    <property>instrumentation/attitude-indicator/indicated-roll-deg</property>
    <axis> 
      <x> 1 </x>
      <y> 0 </y>
      <z> 0 </z>
    </axis>
  </animation>

</PropertyList>
