<?xml version="1.0" encoding="ISO-8859-1"?> 

<PropertyList> 

  <path>oil.ac</path>

  <animation>
    <!-- Objects Opaques -->
    <object-name>fond</object-name>
    <object-name>visses</object-name>
    <object-name>face</object-name>
    <object-name>needle</object-name>

    <!-- Objects Transparents -->
    <object-name>vitre</object-name>
  </animation>

  <!-- working for Rembrandt -->
  <effect>
    <inherits-from>Aircraft/Cessna-L19/Models/Effects/glass/glass</inherits-from>
    <object-name>vitre</object-name>
  </effect>
  
  <animation> 
    <type>material</type>
    <object-name>face</object-name>
    <object-name>needle</object-name>
    <emission>
      <factor-prop>systems/electrical/outputs/instrument-lights</factor-prop>
      <red>   0.50 </red>
      <green> 0.25 </green>
      <blue>  0.25 </blue>
    </emission>
  </animation>
  
  <animation>
    <type>rotate</type>
    <object-name>needle</object-name>
    <property>engines/engine/oil-temp-c</property>
    <interpolation>
      <entry><ind> -80 </ind><dep> -46 </dep></entry>
      <entry><ind> -50 </ind><dep> -28 </dep></entry>
      <entry><ind>   0 </ind><dep>   0 </dep></entry>
      <entry><ind>  50 </ind><dep>  21 </dep></entry>
      <entry><ind> 100 </ind><dep>  42 </dep></entry>
      <entry><ind> 150 </ind><dep>  73 </dep></entry>
    </interpolation>
    <axis>
      <x> -1 </x>
      <y>  0 </y>
      <z>  0 </z>
    </axis>
  </animation>

</PropertyList>
