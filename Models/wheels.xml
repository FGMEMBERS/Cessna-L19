<?xml version="1.0" encoding="ISO-8859-1"?>

<PropertyList>

  <path>wheels.ac</path>

  <animation>
    <!-- Objets opaques -->
    <object-name>axesG</object-name>
    <object-name>roueG</object-name>
    <object-name>axesD</object-name>
    <object-name>roueD</object-name>
    <object-name>axesA</object-name>
    <object-name>roueA</object-name>
    
    <!-- Objets transparents -->
  </animation>

  <animation>
    <type>material</type>
    <object-name>axesG</object-name>
    <object-name>roueG</object-name>
    <object-name>axesD</object-name>
    <object-name>roueD</object-name>
    <object-name>axesA</object-name>
    <object-name>roueA</object-name>
    
    <property-base>sim/model/livery</property-base>
    <texture-prop>texture</texture-prop>
    <texture>texture.png</texture>
    <emission>
      <red-prop>emission/red</red-prop>
      <green-prop>emission/green</green-prop>
      <blue-prop>emission/blue</blue-prop>
    </emission>
  </animation>

  <effect>
    <inherits-from>Aircraft/Generic/Effects/Fuselagereflect</inherits-from>
    <object-name>axesG</object-name>
    <object-name>axesD</object-name>
  </effect>

  <!-- Effets sur le sol -->
  <!-- Roue gauche -->
  <model>
    <path>Aircraft/Cessna-L19/Models/Effects/ground/ground0.xml</path>
    <offsets>
      <x-m> -1.21724 </x-m>
      <y-m> -1.94485 </y-m>
      <z-m> -2.11242 </z-m>
    </offsets>
  </model>
  
  <!-- Roue droite -->
  <model>
    <path>Aircraft/Cessna-L19/Models/Effects/ground/ground1.xml</path>
    <offsets>
      <x-m> -1.21724 </x-m>
      <y-m>  1.94485 </y-m>
      <z-m> -2.11242 </z-m>
    </offsets>
  </model>
  
  <!-- Roulette de queue  -->
  <model>
    <path>Aircraft/Cessna-L19/Models/Effects/ground/ground2.xml</path>
    <offsets>
      <x-m> -3.66715 </x-m>
      <y-m>  0.00000 </y-m>
      <z-m> -2.19201 </z-m>
    </offsets>
  </model>
  
  <!-- Compression -->
  <animation>
    <name>PartieGauche</name>
    <object-name>roueG</object-name>
    <object-name>axeG</object-name>
  </animation>
  
  <animation>
    <type>rotate</type>
    <object-name>PartieGauche</object-name>
    <property>gear/gear[0]/compression-norm</property>
    <interpolation>
      <entry><ind> 0 </ind><dep>   0 </dep></entry>
      <entry><ind> 1 </ind><dep> -10 </dep></entry>
    </interpolation>
    <center>
      <x-m> -2.06235 </x-m>
      <y-m> -0.31269 </y-m>
      <z-m> -0.66803 </z-m>
    </center>
    <axis>
      <x> 1 </x>
      <y> 0 </y>
      <z> 0 </z>
    </axis>
  </animation>
  
  <animation>
    <name>PartieDroite</name>
    <object-name>roueD</object-name>
    <object-name>axeD</object-name>
  </animation>
  
  <animation>
    <type>rotate</type>
    <object-name>PartieDroite</object-name>
    <property>gear/gear[1]/compression-norm</property>
    <interpolation>
      <entry><ind> 0 </ind><dep>  0 </dep></entry>
      <entry><ind> 1 </ind><dep> 10 </dep></entry>
    </interpolation>
    <center>
      <x-m> -2.06235 </x-m>
      <y-m>  0.31269 </y-m>
      <z-m> -0.66803 </z-m>
    </center>
    <axis>
      <x> 1 </x>
      <y> 0 </y>
      <z> 0 </z>
    </axis>
  </animation>
  
  <animation>
    <name>EnsembleRoulette</name>
    <object-name>axesA</object-name>
    <object-name>roueA</object-name>
  </animation>
  
  <animation>
    <type>rotate</type>
    <object-name>EnsembleRoulette</object-name>
    <property>gear/gear[2]/compression-norm</property>
    <interpolation>
      <entry><ind> 0 </ind><dep>   0 </dep></entry>
      <entry><ind> 1 </ind><dep> -10 </dep></entry>
    </interpolation>
    <center>
      <x-m>  3.29772 </x-m>
      <y-m>  0.00000 </y-m>
      <z-m> -0.07655 </z-m>
    </center>
    <axis>
      <x> 0 </x>
      <y> 1 </y>
      <z> 0 </z>
    </axis>
  </animation>
  
  <!-- Rotation des roues lors du roulage -->
  <animation>
    <type>spin</type>
    <object-name>roueG</object-name>
    <property>gear/gear[0]/rollspeed-ms</property>
    <factor> -30 </factor>
    <axis>
      <x1-m> -2.24706 </x1-m>
      <y1-m> -1.18674 </y1-m>
      <z1-m> -1.27566 </z1-m>
      <x2-m> -2.24734 </x2-m>
      <y2-m> -1.07281 </y2-m>
      <z2-m> -1.26566 </z2-m>
    </axis>
  </animation>
  
  <animation>
    <type>spin</type>
    <object-name>roueD</object-name>
    <property>gear/gear[1]/rollspeed-ms</property>
    <factor> -30 </factor>
    <axis>
      <x1-m> -2.24734 </x1-m>
      <y1-m>  1.07281 </y1-m>
      <z1-m> -1.26566 </z1-m>
      <x2-m> -2.24706 </x2-m>
      <y2-m>  1.18674 </y2-m>
      <z2-m> -1.27566 </z2-m>
    </axis>
  </animation>
  
  <animation>
    <type>spin</type>
    <object-name>roueA</object-name>
    <property>gear/gear[2]/rollspeed-ms</property>
    <factor> 30 </factor>
    <center>
      <x-m>  3.75305 </x-m>
      <y-m>  0.00000 </y-m>
      <z-m> -0.40514 </z-m>
    </center>
    <axis>
      <x>  0 </x>
      <y> -1 </y>
      <z>  0 </z>
    </axis>
  </animation>
  
</PropertyList>
